<svg width="64" height="64" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background Circle with Gradient -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0f0f23;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#1a1a3a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2d2d5f;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="textGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#00ff88;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#00ccff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ff6b6b;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <circle cx="32" cy="32" r="32" fill="url(#bgGradient)"/>
  
  <!-- Border -->
  <circle cx="32" cy="32" r="30" fill="none" stroke="url(#textGradient)" stroke-width="2" opacity="0.6"/>
  
  <!-- Main "B" Letter -->
  <text x="32" y="42" font-family="Orbitron, monospace" font-size="32" font-weight="900" 
        text-anchor="middle" fill="url(#textGradient)">B</text>
  
  <!-- Small atoms/particles around the B -->
  <circle cx="16" cy="16" r="2" fill="#00ff88" opacity="0.8">
    <animate attributeName="opacity" values="0.8;1;0.8" dur="2s" repeatCount="indefinite"/>
  </circle>
  <circle cx="48" cy="16" r="1.5" fill="#00ccff" opacity="0.7">
    <animate attributeName="opacity" values="0.7;1;0.7" dur="1.5s" repeatCount="indefinite"/>
  </circle>
  <circle cx="16" cy="48" r="1.5" fill="#ff6b6b" opacity="0.7">
    <animate attributeName="opacity" values="0.7;1;0.7" dur="1.8s" repeatCount="indefinite"/>
  </circle>
  <circle cx="48" cy="48" r="2" fill="#00ff88" opacity="0.8">
    <animate attributeName="opacity" values="0.8;1;0.8" dur="2.2s" repeatCount="indefinite"/>
  </circle>
  
  <!-- Orbital rings (like atoms) -->
  <circle cx="32" cy="32" r="20" fill="none" stroke="#00ff88" stroke-width="1" opacity="0.3">
    <animateTransform attributeName="transform" type="rotate" values="0 32 32;360 32 32" dur="10s" repeatCount="indefinite"/>
  </circle>
  <circle cx="32" cy="32" r="24" fill="none" stroke="#00ccff" stroke-width="1" opacity="0.2">
    <animateTransform attributeName="transform" type="rotate" values="360 32 32;0 32 32" dur="15s" repeatCount="indefinite"/>
  </circle>
</svg>